@* if you don't pass the model from controller and write model here it will simply create a new object with all value to null or might be zero *@
@model Category

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row">
            <h2 class="text-dark">Delete Category</h2>
            <hr />
        </div>
        

        <div class="mb-3">
            <label asp-for="Name">Category Name</label>
            <input asp-for=Name type="text" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">Display Name</label>
            <input asp-for="DisplayOrder" type="text" disabled class="form-control" />

        </div>
        <button type="submit" class="btn btn-danger" style="width:auto">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:auto">Back to list</a>
    </div>
</form>



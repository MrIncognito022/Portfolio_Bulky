@* if you don't pass the model from controller and write model here it will simply create a new object with all value to null or might be zero *@
@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row">
            <h2 class="text-dark">Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger">
        </div>

        <div class="mb-3">
            <label asp-for="Name">Category Name</label>
            <input asp-for=Name type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">Display Name</label>
            <input asp-for="DisplayOrder" type="text" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>

        </div>
        <button type="submit" class="btn btn-dark" style="width:auto">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-success" style="width:auto">Back to list</a>
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
@* if you don't pass the model from controller and write model here it will simply create a new object with all value to null or might be zero *@
@model Product
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-enter">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @* <div asp-validation-summary="All" class="text-danger"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for=Title type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2">Product Name</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for=Description type="text" class="form-control border-0 shadow"></textarea>
                    <label asp-for="Description" class="ms-2">Display Order</label>

                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for=ISBN type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="ISBN" class="ms-2">Display Order</label>

                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for=Author type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Author" class="ms-2">Display Order</label>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for=ListPrice type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-2">Display Order</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for=Price type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2">Display Order</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for=Price50 type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price50" class="ms-2">Display Order</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for=Price100 type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price100" class="ms-2">Display Order</label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control ">Back to list</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

